<p id="notice"><%= notice %></p>

<h1>Shit To Get Done</h1>

<table class="center">
  <thead>
    <tr>
      <th>What needs to be done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.description %></td>
        <td><%= link_to 'Show', todo_item %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
        <td><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="link-to"><%= link_to 'New Todo Item', new_todo_item_path %></button>
